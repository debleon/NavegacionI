<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#57DEB3"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dos palabras"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/btnCerrar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Cerrar"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtSaludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola correo@ejemplo.com"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Te voy a ayudar a intercambiar dos palabras.\n\n1. Ingresa exactamente dos palabras separadas por un espacio.\n2. Te mostraré el orden cambiado.\n3. Si hay más o menos de dos, mostraré un error."
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/edtTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="Ej: Hola mundo"
                android:inputType="text"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#57DEB3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEjecutar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Solucionar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginTop="16dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior personalizado -->
    <LinearLayout
        android:id="@+id/customBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#57DEB3"
        android:weightSum="3"
        android:padding="4dp">

        <!-- Dos mitades -->
        <LinearLayout
            android:id="@+id/itemDosMitades"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mitades"
                android:contentDescription="Dos mitades" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dos mitades"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Dos palabras -->
        <LinearLayout
            android:id="@+id/itemDosPalabras"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_palabras"
                android:contentDescription="Dos palabras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dos palabras"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Quitar fragmento -->
        <LinearLayout
            android:id="@+id/itemQuitarFragmento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fragmento"
                android:contentDescription="Quitar fragmento" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quitar fragmento"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
